<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">
  <listener>
    <listener-class>org.myorg.gwt.server.utils.HibernateListener</listener-class>
  </listener>
  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>org.myorg.gwt.server.GreetingServiceImpl</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>org.myorg.gwt.server.LoginRpcServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/gwtuser/greet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/gwtuser/login</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Main.html</welcome-file>
  </welcome-file-list>

</web-app>
